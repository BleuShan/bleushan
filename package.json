{
  "name": "bleushan",
  "version": "0.0.0",
  "description": "A monorepo of utils",
  "repository": {
    "type": "git",
    "url": "https://github.com/BleuShan/bleushan.git"
  },
  "author": "Philippe Lafontaine <lafontaine.philippe@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:dev": "lerna run build",
    "build": "NODE_ENV=production lerna run build",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "test": "jest",
    "test:ci": "jest && codecov"
  },
  "devDependencies": {
    "codecov": "^3.6.1",
    "lerna": "^3.18.4"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__fixtures__/"
    ],
    "setupFilesAfterEnv": [
      "jest-extended",
      "jest-chain"
    ]
  },
  "release": {
    "branch": "master"
  }
}
