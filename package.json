{
  "name": "bleushan",
  "version": "0.0.0",
  "description": "A monorepo of utils",
  "repository": {
    "type": "git",
    "url": "https://github.com/BleuShan/bleushan.git"
  },
  "author": "Philippe Lafontaine <lafontaine.philippe@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:dev": "lerna run build",
    "build": "NODE_ENV=production lerna run build",
    "lint": "lerna run lint",
    "test": "jest",
    "test:ci": "jest && codecov"
  },
  "devDependencies": {
    "codecov": "^3.1.0",
    "cz-lerna-changelog": "^2.0.0",
    "lerna": "^3.4.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__fixtures__/"
    ]
  },
  "release": {
    "branch": "master"
  },
  "babel": {
    "configFile": false
  }
}
