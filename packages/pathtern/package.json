{
  "name": "@bleushan/pathtern",
  "version": "3.0.0",
  "description": "Routing utilities",
  "keywords": [
    "Router"
  ],
  "author": "Philippe Lafontaine <lafontaine.philippe@gmail.com>",
  "homepage": "https://github.com/BleuShan/bleushan#readme",
  "license": "MIT",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BleuShan/bleushan.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf lib",
    "compile": "rollup --config",
    "lint": "eslint --fix src",
    "test": "jest"
  },
  "dependencies": {
    "@bleushan/utils": "^1.0.0"
  },
  "devDependencies": {
    "@bleushan/babel-eslint": "^10.0.4",
    "@bleushan/babel-preset-env": "^5.0.0",
    "@bleushan/eslint-config": "^3.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "eslint": "^6.6.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.20.0",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^24.9.0",
    "jest-chain": "^1.1.2",
    "jest-extended": "^0.11.2",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.2",
    "rollup": "^1.26.4",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__fixtures__/"
    ],
    "transform": {
      "^.+\\.jsx?$": "../../scripts/jest/root-babel-jest.js"
    },
    "setupFilesAfterEnv": [
      "jest-extended",
      "jest-chain"
    ]
  },
  "release": {
    "branch": "master"
  }
}
