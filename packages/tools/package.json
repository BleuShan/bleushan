{
  "name": "@bleushan/tools",
  "version": "2.1.1",
  "description": "A collection of build tools helpers",
  "main": "lib/index.js",
  "module": "src/index.js",
  "jsnext:main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/BleuShan/bleushan.git"
  },
  "author": "Philippe Lafontaine <lafontaine.philippe@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn compile && yarn copy:assets",
    "clean": "rimraf lib",
    "compile": "babel src -d lib --ignore '**/__tests__,**/__mocks__,**/__fixtures__'",
    "copy:assets": "cp -r src/webpack/partials/presets/assets lib/webpack/partials/presets/assets",
    "lint": "eslint --fix src",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@bleushan/babel-preset-env": "^2.4.1",
    "@bleushan/eslint-config": "^1.3.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.21.0"
  },
  "dependencies": {
    "http-proxy-middleware": "^0.19.0",
    "koa-connect": "^2.0.1",
    "koa2-history-api-fallback": "^0.0.5",
    "partial.lenses": "^14.11.0",
    "ramda": "^0.25.0"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__fixtures__/"
    ],
    "transform": {
      "^.+\\.jsx?$": "../../scripts/jest/root-babel-jest.js"
    }
  },
  "release": {
    "branch": "master"
  }
}
