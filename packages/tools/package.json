{
  "name": "@bleushan/tools",
  "version": "1.0.0",
  "description": "A collection of build tools helpers",
  "main": "lib/index.js",
  "module": "src/index.js",
  "jsnext:main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/BleuShan/bleushan.git"
  },
  "author": "Philippe Lafontaine <lafontaine.philippe@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn compile && yarn copy:assets",
    "clean": "rimraf lib",
    "compile": "babel src -d lib --ignore \"**/__@(tests|mocks|fixtures)__\"",
    "copy:assets": "cp -r src/webpack/partials/presets/assets lib/webpack/partials/presets/assets",
    "lint": "eslint --fix src",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.44",
    "@bleushan/babel-preset-env": "^1.0.0",
    "@bleushan/eslint-config": "^1.0.0",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^22.4.3",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "rimraf": "^2.6.2",
    "webpack": "^4.6.0"
  },
  "dependencies": {
    "http-proxy-middleware": "^0.18.0",
    "koa-connect": "^2.0.1",
    "koa2-history-api-fallback": "^0.0.5",
    "partial.lenses": "^13.7.4",
    "ramda": "^0.25.0"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__fixtures__/"
    ]
  },
  "release": {
    "branch": "master"
  }
}
